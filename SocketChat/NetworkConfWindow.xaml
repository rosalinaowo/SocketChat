<Window x:Class="SocketChat.NetworkConfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocketChat"
        mc:Ignorable="d"
        Title="Network Configuration" Height="80" Width="300" Background="LightGreen" Icon="/Resources/network.ico">
    <StackPanel Margin="5">
        <DockPanel>
            <Label>IP:</Label>
            <TextBlock Name="tbkIP" Width="100" VerticalAlignment="Center"></TextBlock>
            <Label>Port:</Label>
            <TextBox Name="tbxPort" Width="50" VerticalAlignment="Center"></TextBox>
            <Button Name="btnApply" Click="btnApply_Click" Width="50" HorizontalAlignment="Right">Apply</Button>
        </DockPanel>
    </StackPanel>
</Window>
